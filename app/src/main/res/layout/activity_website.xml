<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white_num1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|top">

        <ImageView
            android:layout_marginTop="50dp"
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo2"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="274dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="@string/site"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/brown_num2"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/allcon"
            android:layout_width="wrap_content"
            android:layout_height="205dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/allcontest"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/allocontests" />

        <ImageButton
            android:id="@+id/linkareer"
            android:layout_width="wrap_content"
            android:layout_height="205dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/linkareer"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/linkareer" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/wevity"
            android:layout_width="wrap_content"
            android:layout_height="205dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/wevity"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/wevity" />

        <ImageButton
            android:id="@+id/specup"
            android:layout_width="wrap_content"
            android:layout_height="205dp"
            android:adjustViewBounds="true"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/allcontest"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/spaceup" />

    </LinearLayout>


</LinearLayout>