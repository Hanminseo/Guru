<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="4dp"
    android:layout_marginTop="9dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="9dp"
    android:background="@drawable/item_border"
    android:backgroundTint="#37FFFFFF"
    android:elevation="20dp">

    <TextView
        android:id="@+id/studyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:shadowColor="#33000000"
        android:shadowDx="4.0"
        android:shadowDy="4.0"
        android:shadowRadius="2.0"
        android:text="00 : 00 : 00"
        android:textColor="@color/brown_num2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/subjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:shadowColor="#ffffff"
        android:shadowDx="4.0"
        android:shadowDy="4.0"
        android:shadowRadius="2.0"
        android:textColor="@color/brown_num2"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/PhotoImg"
        app:layout_constraintTop_toTopOf="@+id/PhotoImg"
        tools:text="모바일보안" />

    <ImageView
        android:id="@+id/PhotoImg"
        android:layout_width="57dp"
        android:layout_height="59dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>