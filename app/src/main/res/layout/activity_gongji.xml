<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@color/white_num1">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_weight="2.8"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:paddingBottom="15dp"
            android:text="공지 사항"
            android:textColor="@color/brown_num2"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:paddingBottom="15dp"
            android:text="공지 내용"
            android:textColor="@color/brown_num2"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/brown_round"
            android:paddingLeft="10dp"
            android:paddingTop="25dp"
            android:text="공지임니다"
            android:textAlignment="center"
            android:textColor="@color/white_num1"
            android:textSize="20dp"
            android:id="@+id/notice_r"
            android:textStyle="bold"></TextView>

    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.7"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="30dp"
            android:paddingBottom="15dp"
            android:text="변경할 공지"
            android:textColor="@color/brown_num2"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@drawable/round"
            android:hint="공지를 입력하세요"
            android:id="@+id/notice_w"
            android:paddingLeft="10dp"
            android:textSize="20dp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.7">


        <Button
            android:id="@+id/btnNotice1"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:backgroundTint="@color/brown_num2"
            android:text="현재 공지" />

        <Button
            android:id="@+id/btnNotice2"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/brown_num2"
            android:textStyle="bold"
            android:text="내용 저장" />
    </LinearLayout>

</LinearLayout>